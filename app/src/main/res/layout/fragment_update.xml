<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateFragment">
    <LinearLayout
        android:id="@+id/addlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txttensach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="Tên sách:"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edittensach"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:textSize="20dp"
                android:hint="Tên sách"
                android:textColor="#000000"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btntimkiem"
                android:textSize="20dp"
                android:text="Tìm kiếm"
                android:textColor="#000000"
                android:backgroundTint="#DFDFDF"/>
        </LinearLayout>


        <TextView
            android:id="@+id/txttacgia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="Tác giả:"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/edittacgia"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20dp"
            android:textColor="#000000"
            android:hint="Tác giả" />

        <TextView
            android:id="@+id/txttheloai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="Thể loại:"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="20dp" />
        <Spinner
            android:id="@+id/sptheloai"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/txtchonanh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="Ảnh:"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20dp" />
        <LinearLayout
            android:id="@+id/addlayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/imgsach"
                android:layout_width="220dp"
                android:layout_height="200dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnchonanh"
                android:textColor="#000000"
                android:backgroundTint="#DFDFDF"
                android:textSize="20dp"
                android:text="Chọn ảnh"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/txtgia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="Giá:"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editgia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="20dp"
            android:hint="0"
            android:textColor="#000000"
            android:inputType="numberDecimal" />
        <TextView
            android:id="@+id/txtsl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="Số lượng:"
            android:textColor="#000000"
            android:textSize="20dp" />


        <EditText
            android:id="@+id/editsl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="20dp"
            android:textColor="#000000"
            android:inputType="numberDecimal"
            tools:ignore="DuplicateIds"
            android:hint="0"/>

        <TextView
            android:id="@+id/txtmota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:textStyle="bold"
            android:text="Mô tả:"
            android:textColor="#000000"
            android:textSize="20dp" />


        <EditText
            android:id="@+id/editmota"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:textColor="#000000"
            android:textSize="20dp"
            android:hint="Mô tả"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnsave"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Save"
                android:textColor="#000000"
                android:backgroundTint="#DFDFDF"
                />
            <Button
                android:id="@+id/btnclear"
                android:layout_width="110dp"
                android:layout_marginLeft="140dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Clear"
                android:textColor="#000000"
                android:backgroundTint="#DFDFDF"
                />
        </LinearLayout>

    </LinearLayout>

</ScrollView>